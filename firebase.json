{
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ],
            "predeploy": [
                "npm --prefix \"$RESOURCE_DIR\" run build"
            ]
        }
    ],
    "hosting": [
        {
            "target": "dev",
            "public": "build",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "cleanUrls": true,
            "trailingSlash": true,
            "rewrites": [
                {
                    "regex": "\\/.+",
                    "destination": "/index.html"
                }
            ]
        },
        {
            "target": "prod",
            "public": "build",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "cleanUrls": true,
            "trailingSlash": true,
            "rewrites": [
                {
                    "regex": "\\/.+",
                    "destination": "/index.html"
                }
            ]
        }
    ]
}