{
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ],
            "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
        }
    ],
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "cleanUrls": true,
        "trailingSlash": true,
        "rewrites": [
            {
                "regex": "\\/.+",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "database": {
            "port": 9000
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true
    }
}
