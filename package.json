{
    "name": "gd-place-2023",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "npm run functions:build && firebase emulators:start --import=./test/database --export-on-exit && vite --host",
        "build": "vite build",
        "deploy": "npm run wasm:build-prod && npm run shared:build && npm run build && firebase deploy",
        "preview": "vite preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "functions:build": "cd ./functions && npm run build && cd ..",
        "wasm:build": "cd rust/wasm-lib && wasm-pack build --no-opt --reference-types --weak-refs --target web",
        "wasm:build-prod": "cd rust/wasm-lib && wasm-pack build --profiling --reference-types --weak-refs --target web",
        "shared:build": "cd shared-lib && npm run build && cd ..",
        "nexus:gen": "cd rust/the-nexus && cargo test --release generate_shid -- --nocapture && cd ../..",
        "nexus:gen_no_sheet": "cd rust/the-nexus && cargo test --release generate_shimabid_no_sheet -- --nocapture && cd ../..",
        "symlink": "cd functions && mklink /D shared-lib ..\\shared-lib",
        "rust:cleanall": "cd rust/the-nexus && cargo clean && cd ../wasm-lib && cargo clean && cd .."
    },
    "devDependencies": {
        "@jill64/eslint-config-svelte": "^1.2.20",
        "@sveltejs/adapter-static": "^3.0.4",
        "@sveltejs/kit": "^2.5.22",
        "@sveltejs/vite-plugin-svelte": "^3.1.1",
        "@tsconfig/svelte": "^5.0.0",
        "@types/lodash.debounce": "^4.0.8",
        "@types/pngjs": "^6.0.5",
        "@types/postcss-import": "^14.0.3",
        "@types/svelte-range-slider-pips": "^2.0.2",
        "@types/uuid": "^10.0.0",
        "autoprefixer": "^10.4.16",
        "cssnano": "^7.0.4",
        "eslint": "^8.57.0",
        "firebase-tools": "^13.16.0",
        "postcss": "^8.4.31",
        "postcss-import": "^15.1.0",
        "prettier-plugin-svelte": "^3.2.6",
        "prettier-plugin-tailwindcss": "^0.5.6",
        "sharp": "^0.33.4",
        "svelte": "^4.0.5",
        "svelte-check": "^3.4.6",
        "tailwindcss": "^3.3.5",
        "tslib": "^2.6.0",
        "typescript": "^5.0.2",
        "unplugin-inject-preload": "^2.0.0",
        "vite": "^5.4.0",
        "vite-plugin-full-reload": "^1.2.0",
        "vite-plugin-image-optimizer": "^1.1.8",
        "vite-plugin-top-level-await": "^1.4.2",
        "vite-plugin-wasm": "^3.3.0"
    },
    "dependencies": {
        "@macfja/svelte-persistent-store": "^2.4.1",
        "@smart-firebase/client": "^0.1.3",
        "@types/howler": "^2.2.12",
        "@types/stats.js": "^0.17.3",
        "@zerodevx/svelte-toast": "^0.9.6",
        "classnames": "^2.3.2",
        "firebase": "10.12.5",
        "howler": "^2.2.4",
        "lodash.debounce": "^4.0.8",
        "pngjs": "^7.0.0",
        "shared-lib": "file:shared-lib",
        "stats.js": "^0.17.0",
        "svelte-awesome-color-picker": "^3.1.0",
        "svelte-gestures": "^4.0.0",
        "svelte-portal": "^2.2.1",
        "svelte-range-slider-pips": "^2.2.3",
        "viz-observer": "github:DexterHill0/viz-observer#dist",
        "wasm-lib": "file:rust/wasm-lib/pkg"
    }
}
